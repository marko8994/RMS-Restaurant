<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".HomeActivity"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="@dimen/icon_home_width"
            android:layout_height="@dimen/icon_home_width"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_layout"
            app:srcCompat="@drawable/restaurant_logo" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_xxl"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_title_large"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonHomeOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_layout"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:text="@string/button_order"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"/>

    </RelativeLayout>
</ScrollView>